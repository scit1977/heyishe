<!--pages/address/address.wxml-->
<view class="page">
        <form bindsubmit="formSubmit" class='myform'>
          <view  class="page__title">
            <view class='title'>个人信息</view>
          </view>         
          <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <label class="label">手机号码: </label>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="tel" placeholder="请输入手机号码" type="number" maxlength="11" bindinput="inputPhoneNum" auto-focus value='{{phoneNum}}'/>
                </view>
               

          </view> 
          
          <view  class="weui-cell weui-cell_input">
             <view class="weui-cell__hd">
                 <view class="label">短信验证: </view>
              </view>
              <view class="weui-cell__bd"><input placeholder="短信验证码" type="number" bindinput="addCode" name='code' value='{{code}}'/></view>
               <text wx:if="{{send}}" class="sendMsg" bindtap="sendMsg">获取验证码</text>
                <text wx:if="{{alreadySend}}" class="sendMsg" bindtap="sendMsg">{{second+"秒后获取"}}</text>
          </view> 
          <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="label">您的姓名: </view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="name" placeholder="请输入姓名" bindinput="addnameInfo" value='{{name}}'/>
                </view>
          </view> 
          <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="label">您的地址: </view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="address" placeholder="请输入地址信息"  bindinput="addaddressInfo" value='{{address}}'/>
                </view>
          </view>      
           <view class="weui-cell weui-cell_input"> </view>  
           <view class="weui-btn-area">
    <button class="weui-btn" type="{{buttonType}}" disabled="{{disabled}}" form-type="submit">确定</button>
     </view> 
        
        </form>
      

</view>